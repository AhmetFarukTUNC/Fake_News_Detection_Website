@{
    ViewData["Title"] = ViewData["Title"] ?? "Privacy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FakeNewsDetection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Modern neon arka plan */
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #f0f0f0;
            font-family: 'Roboto', sans-serif;
        }

        .privacy-container {
            max-width: 900px;
            margin: 60px auto;
            padding: 40px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 20px;
            box-shadow: 0 0 30px rgba(0,0,0,0.6);
            backdrop-filter: blur(10px);
        }

        h1, h2 {
            font-family: 'Montserrat', sans-serif;
            text-align: center;
            text-transform: uppercase;
        }

        h1 {
            color: #00ffea;
            text-shadow: 0 0 10px #00ffea, 0 0 20px #00ffea;
        }

        h2 {
            margin-top: 40px;
            font-size: 1.8rem;
            color: #ffec00;
            text-shadow: 0 0 8px #ffec00, 0 0 15px #ffec00;
        }

        p {
            line-height: 1.8;
            font-size: 1.1rem;
            margin: 15px 0;
            color: #e0e0e0;
        }

        a {
            color: #00ffff;
            text-decoration: none;
            transition: 0.3s;
        }

            a:hover {
                text-shadow: 0 0 8px #00ffff, 0 0 15px #00ffff;
            }

        .btn-home {
            display: inline-block;
            padding: 12px 25px;
            margin-top: 20px;
            border-radius: 50px;
            background: linear-gradient(45deg, #00ffea, #ffec00);
            color: #000;
            font-weight: bold;
            text-transform: uppercase;
            text-decoration: none;
            box-shadow: 0 0 15px rgba(255,255,255,0.6);
            transition: 0.3s;
        }

            .btn-home:hover {
                transform: translateY(-3px);
                box-shadow: 0 0 25px rgba(255,255,255,0.8);
            }

        footer.footer {
            border-top: none !important; /* üst çizgiyi kaldır */
            padding: 20px 0;
            text-align: center;
            color: #ccc;
        }
    </style>
</head>
<body>
    

    <div class="container privacy-container">
        <h1>@ViewData["Title"]</h1>
        <p>@ViewData["Description"]</p>

        <h2>Data Collection</h2>
        <p>
            Our Fake News Detection system collects text data only to analyze and predict whether a news article is real or fake.
            No personal information is stored or shared.
        </p>

        <h2>Data Usage</h2>
        <p>
            The data you provide is used solely for prediction purposes.
            We do not store your text or any associated personal information.
        </p>

        <h2>Third-Party Services</h2>
        <p>
            This system may use third-party services for model hosting or analytics, but no personal data is transmitted to these services.
        </p>

        <h2>Contact</h2>
        <p>
            If you have questions about our privacy policy, please contact us at
            <a href="mailto:info@fakenews.com">info@fakenews.com</a>.
        </p>

        <div class="text-center">
            <a asp-controller="News" asp-action="Index" class="btn-home">Back to Home</a>
        </div>
    </div>

    <footer class="footer">
        &copy; 2025 - FakeNewsDetection
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
