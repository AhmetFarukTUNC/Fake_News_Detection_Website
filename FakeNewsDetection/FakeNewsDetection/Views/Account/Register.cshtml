@model FakeNewsMVC.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Roboto&display=swap" rel="stylesheet">

<style>
    body {
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(135deg, #6d0eb5, #d500f9);
        overflow-x: hidden;
    }

    /* Navbar */
    .navbar {
        width: 100%;
        background-color: rgba(255,255,255,0.95);
        padding: 15px 30px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .navbar a {
            text-decoration: none;
            color: #6d0eb5;
            font-weight: 700;
            margin-left: 15px;
            transition: color 0.3s;
        }

            .navbar a:hover {
                color: #d500f9;
            }

    /* Register card */
    .register-container {
        display: flex;
        justify-content: center;
        margin-top: 120px; /* navbar altına kaydırma */
    }

    .register-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px;
        width: 400px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.3);
        text-align: center;
        transition: transform 0.5s ease, box-shadow 0.5s ease;
    }

        .register-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 30px 60px rgba(0,0,0,0.4);
        }

        .register-card h2 {
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 30px;
            color: #6d0eb5;
            font-weight: 700;
            background: linear-gradient(90deg, #6d0eb5, #d500f9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .form-control {
        width: 100%;
        padding: 12px 20px;
        margin-bottom: 20px;
        border: 2px solid #ddd;
        border-radius: 10px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #6d0eb5;
            box-shadow: 0 0 10px rgba(109,14,181,0.4);
            outline: none;
        }

    .btn-register {
        background: linear-gradient(90deg, #6d0eb5, #d500f9);
        color: white;
        border: none;
        padding: 12px 0;
        width: 100%;
        border-radius: 10px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-register:hover {
            background: linear-gradient(90deg, #d500f9, #6d0eb5);
            box-shadow: 0 5px 20px rgba(0,0,0,0.3);
            transform: scale(1.05);
        }

    .success-message {
        color: green;
        font-weight: bold;
        margin-bottom: 20px;
    }
</style>



<!-- Register Card -->
<div class="register-container">
    <div class="register-card">
        <h2>💎 Create Your Account</h2>

        @if (TempData["Success"] != null)
        {
            <div class="success-message">@TempData["Success"]</div>
        }

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name" })
            @Html.ValidationMessageFor(m => m.FullName)

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)

            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)

            <button type="submit" class="btn-register">Sign Up</button>
        }
    </div>
</div>
