@model YourProject.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Roboto&display=swap" rel="stylesheet">

<style>
    /* Body ve Arka Plan */
    body {
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(135deg, #6d0eb5, #d500f9);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Main content: navbar altına ortalama */
    .main-content {
        flex: 1;
        display: flex;
        justify-content: center; /* yatay ortalama */
        align-items: center; /* dikey ortalama */
        margin-top: 80px; /* navbar yüksekliği kadar boşluk */
        width: 100%;
    }

    /* Login Card */
    .login-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 25px;
        padding: 50px;
        width: 420px;
        max-width: 90%; /* küçük ekranlarda taşmayı önler */
        box-shadow: 0 25px 60px rgba(0,0,0,0.35);
        text-align: center;
        transition: transform 0.5s ease, box-shadow 0.5s ease;
        border: 1px solid rgba(255,255,255,0.3);
        margin: 0 auto; /* ekstra yatay ortalama */
    }

        .login-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 35px 70px rgba(0,0,0,0.45);
        }

        .login-card h2 {
            font-family: 'Montserrat', sans-serif;
            margin-bottom: 35px;
            font-weight: 700;
            font-size: 2.2em;
            background: linear-gradient(90deg, #6d0eb5, #d500f9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .form-control {
        width: 100%;
        padding: 14px 20px;
        margin-bottom: 25px;
        border: 2px solid #ddd;
        border-radius: 12px;
        transition: border-color 0.3s, box-shadow 0.3s;
        font-size: 1em;
    }

        .form-control:focus {
            border-color: #6d0eb5;
            box-shadow: 0 0 15px rgba(109,14,181,0.4);
            outline: none;
        }

    .btn-login {
        background: linear-gradient(90deg, #6d0eb5, #d500f9);
        color: white;
        border: none;
        padding: 14px 0;
        width: 100%;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.1em;
        cursor: pointer;
        transition: all 0.4s ease;
        box-shadow: 0 5px 20px rgba(109,14,181,0.4);
    }

        .btn-login:hover {
            background: linear-gradient(90deg, #d500f9, #6d0eb5);
            box-shadow: 0 10px 30px rgba(109,14,181,0.6);
            transform: scale(1.07);
        }

    .success-message {
        color: green;
        font-weight: bold;
        margin-bottom: 20px;
        font-size: 1.05em;
    }
</style>

<!-- Main Content -->
<div class="main-content">
    <div class="login-card">
        <h2>🔑 Login</h2>

        @if (TempData["Success"] != null)
        {
            <div class="success-message">@TempData["Success"]</div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)

            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)

            <button type="submit" class="btn-login">Login</button>
        }
    </div>
</div>
